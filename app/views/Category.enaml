from enaml.widgets.api import Window, Container, CheckBox
from events import Events

enamldef CategoryView(Container):
    attr value = "Placeholder"
    attr checked = False
    attr callback = lambda _: null
    attr categoryEvents = Events(('on_change'))
    categoryEvents.on_change += callback

    CheckBox: 
        text = value
        toggled :: 
            checked = self.checked
            events.on_change(self) 